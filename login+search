from selenium import webdriver
from selenium.webdriver.common.keys import Keys
import pyautogui
from selenium.webdriver.support.wait import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.common.by import By


try: 
    link = "https://www.phptravels.net/"
    browser = webdriver.Chrome()
    browser.get(link)
    browser.set_window_size(1500, 1000) # размер окна 1500х1000

    wait = WebDriverWait(browser, 2)
    wait.until(EC.visibility_of_element_located((By.LINK_TEXT, "Login"))).click() # переходим на страницу логина
    browser.find_element_by_name('email').send_keys("user@phptravels.com") # вводим логин. поиск через name 
    browser.find_element_by_name('password').send_keys("demouser") # вводим пароль. поиск через name 
    browser.find_element_by_xpath("//form/div[3]/button").click() # логинимся. поиск через xpath
    browser.find_element_by_link_text('Hotels').click()
    city = wait.until(EC.visibility_of_element_located((By.ID, 'select2-hotels_city-container'))).click() # наводим курсор в строку поиска
    
    
    pyautogui.typewrite('Dubai')# вводим город 
    time.sleep(1)
    res_search = browser.find_element_by_id("select2-hotels_city-results")#выбираем наш вариант из списка
    res_search.click()

    clk_search = browser.find_element_by_id('submit')# нажимаем кнопку поиск
    clk_search.click()
    
    #скрол вниз страницы
    element = browser.find_element_by_class_name('info__title') 
    actions = ActionChains(browser)
    actions.move_to_element(element).perform()
    time.sleep(1)

    #hotel_choise = browser.find_element_by_xpath("//li[@id='jumeirah beach hotel']/div/div/a/img") #находим отель
    hotel_choise = browser.find_element_by_css_selector('//*[@id="jumeirah beach hotel"]/div/div[1]/a/img').click() #находим отель
    
    
finally:
    # ожидание чтобы визуально оценить результаты прохождения скрипта
    time.sleep(10)
    browser.quit()
